<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <meta http-equiv="X-UA-Compatible" content="ie=edge">
      <title>Reservations</title>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
      <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.2/css/all.css" integrity="sha384-/rXc/GQVaYpyDdyxK+ecHPVYJSN9bmVFBvjA/9eOB+pb3F2w2N6fc5qB9Ew5yIns" crossorigin="anonymous">
      <script
         src="https://code.jquery.com/jquery-3.3.1.min.js"
         integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
         crossorigin="anonymous"></script>
   </head>
   <style>
      .review{
      height:auto;
      overflow:hidden;
      }
      nav{
      height:150px;
      }
   </style>
   <body>
      <nav class="grey lighten-2">
         <div class="nav-wrapper">
            <a href="#" class="brand-logo"><img class="brand-logo" style="height:200px; width:200px;"src="https://images.vexels.com/media/users/3/131725/isolated/preview/06ebd222648112be03fba98587ff2902-philadelphia-skyline-silhouette-by-vexels.png" alt=""></a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
               <li> <a href="/showreservations">Reservations</a></li>
               <li><a href="/reservation">Book Room</a></li>
               <li> <a href="api/reservation">Rooms API</a></li>
            </ul>
         </div>
      </nav>
      </div>
      </nav>
      <div class="container">
         <br>
         <div class="row">
            <div class="col-md-12 text-center mt-4 border border-dark">
               <h4>Write Review</h4>
               <hr>
               <form>
                  <label for="username">Name:</label>
                  <input  id="name" name="name" type="text" placeholder="Enter your name">
                  <div class="form-group"></div>
                  <label for="comment">Comment:</label>
                  <textarea name="comment" class="materialize-textarea" rows="5" id="comment"></textarea>
            </div>
            <button id="submit" class="btn-large black">Submit</button>
            </form>
         </div>
         <div class="col-md-1"></div>
      </div>
      <div class="row">
         <div class="col-md-12  text-center  mt-4 border border-dark">
            <div class="review">
               <h4>Reviews</h4>
               <hr>
            </div>
         </div>
      </div>
      </div>
      <script>
         $.get('/api/reviews').then(data=>{
             console.log(data)
             data.forEach(comment=>{
                 $('.review').append(`
                   <h5 class="bg-dark text-white">${comment.name}</h5>
                   <hr>
                   <p>${comment.comment}</p>
                   <hr>
                 
                 `)
                 
             })
         })
         
         $('#submit').on('click',function(){
             $.ajax({
            url:'/reviews',
            method:'POST',
            data:'name='+ $('#name').val() + '&' +'comment=' +$('#comment').val()
         }).then(()=>{
           alert('Thanks for your review')
         })
         
         })
       </script>
   </body>
</html>